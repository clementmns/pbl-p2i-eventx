{% if type == 'success' %}
    <div id="success-toast" class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6 fixed top-6 right-6 z-50 transition-opacity duration-500">
        {{ message|e }}
    </div>
    <script>
        setTimeout(function() {
            var toast = document.getElementById('success-toast');
            if (toast) {
                toast.style.opacity = '0';
                setTimeout(function() {
                    toast.style.display = 'none';
                }, 500);
            }
        }, 10000);
    </script>
{% elseif type == 'error' %}
    <div id="error-toast" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6 fixed top-6 right-6 z-50 transition-opacity duration-500">
        {{ message|e }}
    </div>
    <script>
        setTimeout(function() {
            var toast = document.getElementById('error-toast');
            if (toast) {
                toast.style.opacity = '0';
                setTimeout(function() {
                    toast.style.display = 'none';
                }, 500);
            }
        }, 10000);
    </script>
{% endif %}
