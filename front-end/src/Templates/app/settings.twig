{% extends 'app/base.twig' %}

{% block title %}Home - EventX{% endblock %}

{% block content %}
<div>
    <h1 class="text-3xl font-bold mb-6">Settings</h1>
    <p class="text-gray-700 mb-4">Manage your account settings and preferences.</p>
    <form method="post" action="/settings" class="space-y-4 w-1/2">
        <div>
            <label for="firstName" class="block text-sm font-medium text-gray-700">First Name</label>
            <input type="text" name="firstName" id="firstName" class="mt-1 block w-full px-3 py-2 border border-gray-300 focus:outline-none focus:ring-gray-500 focus:border-gray-500" value="{{ profile.firstName|default('') }}">
        </div>
        <div>
            <label for="lastName" class="block text-sm font-medium text-gray-700">Last Name</label>
            <input type="text" name="lastName" id="lastName" class="mt-1 block w-full px-3 py-2 border border-gray-300 focus:outline-none focus:ring-gray-500 focus:border-gray-500" value="{{ profile.lastName|default('') }}">
        </div>
        <div>
            <label for="pictures" class="block text-sm font-medium text-gray-700">Profile Picture URL</label>
            <input type="text" name="pictures" id="pictures" class="mt-1 block w-full px-3 py-2 border border-gray-300 focus:outline-none focus:ring-gray-500 focus:border-gray-500" value="{{ profile.pictures|default('') }}">
        </div>
        <div>
            <label for="description" class="block text-sm font-medium text-gray-700">Description</label>
            <textarea name="description" id="description" rows="3" class="mt-1 block w-full px-3 py-2 border border-gray-300 focus:outline-none focus:ring-gray-500 focus:border-gray-500">{{ profile.description|default('') }}</textarea>
        </div>
        <div>
            <input type="hidden" name="userId" id="userId" class="mt-1 block w-full px-3 py-2 border border-gray-300 focus:outline-none focus:ring-gray-500 focus:border-gray-500" value="{{ profile.userId|default('') }}">
        </div>
        <div class="flex space-x-4">
            <button type="submit" class="cursor-pointer w-1/2 py-2 px-4 bg-gray-800 text-white font-semibold">Save Changes</button>
            <button type="button" onclick="window.location.href='/'" class="cursor-pointer w-1/2 py-2 px-4 bg-gray-600 text-white font-semibold">Cancel</button>
        </div>
        {% if errors is defined and errors|length > 0 %}
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 mb-4">
                <strong>Error:</strong>
                <ul class="list-disc list-inside">
                    {% for err in errors %}
                        <li>{{ err }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}
        {% if success %}
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
                {{ success }}
            </div>
        {% endif %}
    </form>
</div>

{% endblock %}
