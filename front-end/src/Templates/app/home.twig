{% extends 'app/base.twig' %}

{% block title %}Home - EventX{% endblock %}

{% block content %}
<div>
    <div class="flex flex-col mb-10">
        <div class="flex items-center justify-between mb-2">
            <div class="flex items-center gap-3">
                {% if user %}
                    <h1 class="text-3xl font-bold">Welcome {{ user.profile.firstName }}</h1>
                {% endif %}
                {% if not user %}
                    <h1 class="text-3xl font-bold">Welcome to EventX</h1>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="flex gap-8">
        {% include 'components/events.twig' with {'events': events} %}

        <!-- Wishlist & Joined Events Section -->
        <div class="w-1/3 flex flex-col gap-8">
            {% include 'components/wishlist.twig' with {'wishlist': wishlist, 'joinedEvents': joinedEvents} %}
            {% include 'components/joinedEvents.twig' with {'joinedEvents': joinedEvents} %}
        </div>
    </div>
</div>

{% endblock %}
