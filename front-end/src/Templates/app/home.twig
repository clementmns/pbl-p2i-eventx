{% extends 'app/base.twig' %}

{% block title %}Home - EventX{% endblock %}

{% block content %}
<div>
    {% if success %}
        {% include 'components/toast.twig' with { type: 'success', message: success } %}
    {% endif %}
    {% if error %}
        {% include 'components/toast.twig' with { type: 'error', message: error } %}
    {% endif %}
    <h1 class="text-3xl font-bold mb-6">Welcome to EventX</h1>
    <p class="text-gray-700 mb-4">Discover and manage your events seamlessly.</p>

    <div class="flex gap-8">
        <!-- Events Section -->
        <div class="w-2/3">
            <h1 class="text-3xl font-bold mb-6">Events</h1>
            <p class="text-gray-700 mb-4">Browse all available events below.</p>
            <div class="w-full">
                <a href="/events/create" class="w-full py-2 px-4 mb-6 bg-gray-800 text-white font-semibold text-center block">Create Event</a>
                {% if events is defined and events|length > 0 %}
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
                    {% for event in events %}
                    <div class="bg-white border border-gray-300 p-6 flex flex-col justify-between">
                        <h2 class="text-2xl font-bold text-gray-800 mb-2">{{ event.name }}</h2>
                        <p class="text-gray-700 mb-4">{{ event.description }}</p>
                        <div class="mb-2 text-sm text-gray-600"><strong>Start:</strong> {{ event.startDate|date('F j, Y \a\t H:i') }}</div>
                        <div class="mb-2 text-sm text-gray-600"><strong>End:</strong> {{ event.endDate|date('F j, Y \a\t H:i') }}</div>
                        <div class="mb-2 text-sm text-gray-600"><strong>Location:</strong> {{ event.place }}</div>
                        <div class="flex gap-2 mt-4">
                            <form method="post" action="/events/join" class="inline w-full">
                                <input type="hidden" name="eventId" value="{{ event.id }}">
                                <button type="submit" class="py-2 px-4 bg-gray-800 cursor-pointer text-white w-full font-semibold">Join</button>
                            </form>
                            <form method="post" action="/wishlist/add" class="inline w-full">
                                <input type="hidden" name="eventId" value="{{ event.id }}">
                                <button type="submit" class="py-2 px-4 border border-gray-500 cursor-pointer w-full font-semibold">Add to Wishlist</button>
                            </form>
                        </div>
                        <div class="flex gap-2 flex-col mt-4">
                            <a href="/events/edit?eventId={{ event.id }}" class="py-2 px-4 bg-gray-600 text-white cursor-pointer font-semibold w-full text-center inline-block">Edit</a>
                            <form action="/events/delete" method="POST" style="display:inline;">
                                <input type="hidden" name="eventId" value="{{ event.id }}">
                                <button type="submit" class="py-2 px-4 bg-red-600 text-white cursor-pointer font-semibold w-full text-center inline-block" onclick="return confirm('Are you sure you want to delete this event?');">Delete</button>
                            </form>
                        </div>
                    </div>
                    {% endfor %}
                </div>
                {% else %}
                    <div class="text-gray-500 mb-8">No events found.</div>
                {% endif %}
            </div>
        </div>

        <!-- Wishlist Section -->
        <div class="w-1/3">
            <h2 class="text-2xl font-bold mb-4">Your Wishlist</h2>
            {% if wishlist is defined and wishlist|length > 0 %}
            <div>
                <ul class="space-y-4">
                    {% for event in wishlist %}
                    <div class="bg-white border border-gray-300 p-6 flex flex-col justify-between">
                        <h2 class="text-2xl font-bold text-gray-800 mb-2">{{ event.name }}</h2>
                        <p class="text-gray-700 mb-4">{{ event.description }}</p>
                        <div class="mb-2 text-sm text-gray-600"><strong>Start:</strong> {{ event.startDate|date('F j, Y \a\t H:i') }}</div>
                        <div class="mb-2 text-sm text-gray-600"><strong>End:</strong> {{ event.endDate|date('F j, Y \a\t H:i') }}</div>
                        <div class="mb-2 text-sm text-gray-600"><strong>Location:</strong> {{ event.place }}</div>
                        <div class="flex gap-4 mt-4">
                            <form method="post" action="/events/quit" class="inline w-full">
                                <input type="hidden" name="eventId" value="{{ event.id }}">
                                <button type="submit" class="py-2 px-4 bg-gray-800 cursor-pointer text-white w-full font-semibold">Quit</button>
                            </form>
                        </div>
                    </div>
                    {% endfor %}
                </ul>
            </div>
            {% else %}
                <div class="text-gray-500">Your wishlist is empty.</div>
            {% endif %}
        </div>
    </div>
</div>

{% endblock %}
