{% extends 'html.twig' %}

{% block title %}Register{% endblock %}

{% block content %}
<div class="flex flex-col items-center justify-center min-h-screen">
    <div class="w-full max-w-md p-8 flex flex-col items-center border border-gray-300">
        <h1 class="text-3xl font-bold text-gray-800 mb-6">EventX - Register</h1>
        {% if error %}
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 mb-4">
                <strong>Error:</strong> {{ error }}
            </div>
        {% endif %}
        <form method="post" action="/register" class="space-y-4 w-full">
            <div>
                <label for="mail" class="block text-sm font-medium text-gray-700">Email</label>
                <input type="email" name="mail" id="mail" required class="mt-1 block w-full px-3 py-2 border border-gray-300 focus:outline-none focus:ring-gray-500 focus:border-gray-500">
            </div>
            <div>
                <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
                <input type="password" name="password" id="password" required class="mt-1 block w-full px-3 py-2 border border-gray-300 focus:outline-none focus:ring-gray-500 focus:border-gray-500">
            </div>
            <div>
                <label for="confirmPassword" class="block text-sm font-medium text-gray-700">Confirm Password</label>
                <input type="password" name="confirmPassword" id="confirmPassword" required class="mt-1 block w-full px-3 py-2 border border-gray-300 focus:outline-none focus:ring-gray-500 focus:border-gray-500">
            </div>
            <div>
                <button type="submit" class="cursor-pointer w-full py-2 px-4 bg-gray-800 text-white font-semibold">Register</button>
            </div>
            <p class="mt-4 text-sm text-gray-600 text-center">Already have an account? <a href="/login" class="text-gray-500 hover:underline">Login here</a></p>
        </form>
    </div>
</div>
{% endblock %}
